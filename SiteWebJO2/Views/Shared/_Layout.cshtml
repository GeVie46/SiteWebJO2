<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JO2024Tickets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SiteWebJO2.styles.css" asp-append-version="true" />
    @*     pour la police Mansalva *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cabin:ital,wght@0,400;0,600;0,700;1,400&family=Mansalva&display=swap" rel="stylesheet">
    <!-- Include the Bootstrap Icons font stylesheet -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

</head>
<body>
    <header class="container-fluid justify-content-center">
        <nav class="row m-2 mb-3">
            @* column with Olympics logo *@
            <div class="col-3 p-0 d-flex">
                <img class="logoJO" src="~/images/JO 2024 logo cropped.jpg" alt="Olympics logo">
            </div>
            
            @* column with Olympic Games 2024 PARIS *@
            <div class="container col-6 ">
                <h2 class="row justify-content-center">Olympic Games 2024</h2>
                <img src="~/images/paris logo.jpg" class="mx-auto d-block logoParis" alt="Paris logo">
            </div>

            @* column with menu *@
            <div class="container col-3">
                <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-light bg-white justify-content-end">
                    @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"></a> *@
                    <button class="navbar-toggler box-shadow mb-2" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse ">
                        @*  <ul class="navbar-nav flex-grow-1">
                            @* <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li> 
                                <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li> 
                        </ul> *@
                        <partial name="_LoginPartial" />
                    </div>
                </nav>
            </div>

        </nav>
        
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer bgBlue p-2 text-wrap">
        <div class="container">
            &copy; 2024 - Jo2024tickets -
            <a class="bgBlue m-2" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a class="bgBlue m-2" asp-area="" asp-controller="Home" asp-action="TicketingTerms">Ticketing Terms and Conditions</a>
            <a class="bgBlue m-2" asp-area="" asp-controller="Home" asp-action="LegalNotice">Legal Notice</a>
            <a class="bgBlue m-2" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy policy</a>
        </div>
    </footer>

    <!-- Message Modal -->
    <div class="modal fade" id="MsgModal" tabindex="-1" role="dialog" aria-labelledby="Information" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="MsgModalTitle">Modal title</h5>
                </div>
                <div class="modal-body">
                    <p class="modal-title" id="MsgModalText">Modal text</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="closeButton" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
